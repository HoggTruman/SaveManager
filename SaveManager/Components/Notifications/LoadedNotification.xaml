<UserControl x:Class="SaveManager.Components.Notifications.LoadedNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SaveManager.Components.Notifications"
             mc:Ignorable="d" >
    <UserControl.Resources>
        <SolidColorBrush x:Key="LoadBrush"
                         Color="#2eb9ff" />
    </UserControl.Resources>

    <Border BorderBrush="{StaticResource LoadBrush}"
            BorderThickness="3">
        <StackPanel Orientation="Horizontal">
            <Image Source="/Assets/LoadSave.png"
                   Width="30"
                   Margin="10 2" />
            <TextBlock Text="Load Successful"
                       FontSize="24"
                       Foreground="{StaticResource LoadBrush}"
                       Margin="10 2" />
        </StackPanel>
    </Border>
</UserControl>
