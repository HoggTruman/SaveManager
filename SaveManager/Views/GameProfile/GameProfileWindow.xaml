<Window x:Class="SaveManager.Views.GameProfile.GameProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaveManager.Views.GameProfile"
        xmlns:viewmodels="clr-namespace:SaveManager.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:GameProfileViewModel}"
        mc:Ignorable="d"
        Title="Configure Games / Profiles"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <Grid Width="500"
              Height="65">
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="45" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="37.5" />
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="37.5" />
            </Grid.ColumnDefinitions>

            <Label Target="{Binding ElementName=GameComboBox}"
                   Content="Game:"
                   HorizontalAlignment="Left"
                   Grid.Column="0"
                   FontSize="14"
                   Margin="10, 2, 0, 0"
                   Padding="0" />

            <ComboBox x:Name="GameComboBox"
                      ItemsSource="{Binding Games}"
                      SelectedItem="{Binding ActiveGame}"
                      DisplayMemberPath="Name"
                      Width="Auto"
                      Height="25"
                      Grid.Row="1"
                      Grid.Column="0"
                      Margin="10" />

            <Button x:Name="AddGameButton"
                    Click="AddGameButton_Click"
                    Width="25"
                    Height="25"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="4,0,5,0">+</Button>

            <Button x:Name="RemoveGameButton"
                    Click="RemoveGameButton_Click"
                    Width="25"
                    Height="25"
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="0">-</Button>

            <Button x:Name="RenameGameButton"
                    Click="RenameGameButton_Click"
                    Width="25"
                    Height="25"
                    Grid.Row="1"
                    Grid.Column="3"
                    Margin="5,0,4,0">R</Button>
        </Grid>


        <Separator Grid.Row="1"
                   Margin="0 1 0 1" />


        <Grid Width="500"
              Height="Auto"
              Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="20" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>

            <Label Content="Location of Savefile:"
                   HorizontalAlignment="Left"
                   FontSize="14"
                   Margin="10,2,0,0"
                   Padding="0" />

            <Label Content="{Binding Path=ActiveGame.SavefileLocation}"
                   Width="Auto"
                   Height="28"
                   Grid.Row="1"
                   Grid.Column="0"
                   Margin="10"
                   BorderBrush="DarkGray"
                   BorderThickness="1" />

            <Button x:Name="SavefileBrowseButton"
                    Click="SavefileBrowseButton_Click"
                    Content="Browse"
                    Width="Auto"
                    Height="25"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="10" />

            <Label Content="Profiles Directory:"
                   HorizontalAlignment="Left"
                   Grid.Row="2"
                   FontSize="14"
                   Margin="10,2,0,0"
                   Padding="0" />

            <Label Content="{Binding Path=ActiveGame.ProfilesDirectory}"
                   Width="Auto"
                   Height="28"
                   Grid.Row="3"
                   Margin="10"
                   BorderBrush="DarkGray"
                   BorderThickness="1" />

            <Button x:Name="ProfilesDirectoryBrowseButton"
                    Click="ProfilesDirectoryBrowseButton_Click"
                    Content="Browse"
                    Width="Auto"
                    Height="25"
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="10" />
        </Grid>


        <Separator Grid.Row="3"
                   Margin="0 1 0 1" />


        <Grid Width="500"
              Height="200"
              Grid.Row="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="45" />
                <RowDefinition Height="45" />
                <RowDefinition Height="45" />
                <RowDefinition Height="45" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>

            <Label Target="{Binding ElementName=ProfilesListBox}"
                   HorizontalAlignment="Left"
                   FontSize="14"
                   Margin="10,2,0,0"
                   Padding="0">
                Profiles:
            </Label>
            <ListBox ItemsSource="{Binding Path=ActiveGame.Profiles}"
                     SelectedItem="{Binding SelectedProfile}"
                     DisplayMemberPath="Name"
                     SelectionMode="Single"
                     x:Name="ProfilesListBox"
                     Width="Auto"
                     Height="Auto"
                     Grid.Row="1"
                     Grid.RowSpan="4"
                     Margin="10" />

            <Button x:Name="NewProfileButton"
                    Click="NewProfileButton_Click"
                    Content="New"
                    Width="Auto"
                    Height="25"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="10" />

            <Button x:Name="RenameProfileButton"
                    Click="RenameProfileButton_Click"
                    Content="Rename"
                    Width="Auto"
                    Height="25"
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="10" />

            <Button x:Name="DeleteProfileButton"
                    Click="DeleteProfileButton_Click"
                    Content="Delete"
                    Width="Auto"
                    Height="25"
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="10" />
        </Grid>
    </Grid>
</Window>
