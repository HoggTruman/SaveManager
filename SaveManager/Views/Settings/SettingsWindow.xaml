<Window x:Class="SaveManager.Views.Settings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaveManager.Views.Settings"
        mc:Ignorable="d"
        Background="GhostWhite"
        Title="Settings"
        Height="Auto"
        Width="400"
        SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        MouseDown="Window_MouseDown">
    <Grid x:Name="RootGrid"
          Margin="5"
          Focusable="True"
          KeyboardNavigation.IsTabStop="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>



        <GroupBox Header="Hotkeys">
            <StackPanel Orientation="Vertical"
                        Margin="10,10,10,0">
                <CheckBox Content="Global Hotkeys"
                          Margin="0,0,0,10" />

                <StackPanel Orientation="Vertical">
                    <StackPanel.Resources>
                        <Style TargetType="DockPanel">
                            <Setter Property="LastChildFill"
                                    Value="False" />
                            <Setter Property="Margin"
                                    Value="0,5" />
                        </Style>
                    </StackPanel.Resources>
                    <DockPanel>
                        <Label Content="Load Selected Save:"
                               VerticalAlignment="Center"
                               Padding="0" />

                        <local:HotkeyInputControl x:Name="LoadSaveInputControl"
                                                  DockPanel.Dock="Right" />
                    </DockPanel>

                    <DockPanel>
                        <Label Content="Import Save:"
                               VerticalAlignment="Center"
                               Padding="0" />

                        <local:HotkeyInputControl x:Name="ImportSaveInputControl"
                                                  DockPanel.Dock="Right" />
                    </DockPanel>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Margin="0 10 0 5">
            
            <Button x:Name="SaveButton"
                    Click="SaveButton_Click"
                    Content="Save"                    
                    Width="60"
                    Grid.Row="1" 
                    Margin="20, 0"/>

            <Button x:Name="CancelButton"
                    Click="CancelButton_Click"
                    Content="Cancel"
                    Width="60"
                    Grid.Row="1" />
        </StackPanel>
        
    </Grid>
</Window>
