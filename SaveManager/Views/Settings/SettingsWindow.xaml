<Window x:Class="SaveManager.Views.Settings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaveManager.Views.Settings"
        mc:Ignorable="d"
        Background="GhostWhite"
        Title="Settings" 
        Height="Auto" 
        Width="300"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style x:Key="HotkeyBox"
               TargetType="Label">
            <Setter Property="Width"
                    Value="60" />
            <Setter Property="Height"
                    Value="24" />
            <Setter Property="Padding"
                    Value="5,0" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="BorderBrush"
                    Value="DarkGray" />
            <Setter Property="Background"
                    Value="White" />
        </Style>
    </Window.Resources>
    
    <Grid Width="Auto"
          Margin="5">
        <GroupBox Header="Hotkeys">
            <StackPanel Orientation="Vertical"
                        Margin="10,10,10,0">
                <CheckBox Content="Enabled"
                          Margin="0,0,0,10"/>
                
                <StackPanel Orientation="Vertical">
                    <StackPanel.Resources>
                        <Style TargetType="DockPanel">
                            <Setter Property="LastChildFill"
                                    Value="False" />
                            <Setter Property="Margin"
                                    Value="0,5" />
                        </Style>
                    </StackPanel.Resources>
                    <DockPanel>
                        <Label Content="Load Selected Save:"
                               VerticalAlignment="Center"
                               Padding="0" />

                        <Label Content="{Binding Path=}"
                               DockPanel.Dock="Right"
                               Style="{StaticResource HotkeyBox}" />
                    </DockPanel>

                    <DockPanel>
                        <Label Content="Import Save:"
                               VerticalAlignment="Center"
                               Padding="0" />

                        <Label Content="{Binding Path=}"
                               DockPanel.Dock="Right"
                               Style="{StaticResource HotkeyBox}" />
                    </DockPanel>
                </StackPanel>
            </StackPanel>
            
        </GroupBox>


    </Grid>
</Window>
