<UserControl x:Class="SaveManager.Views.Settings.HotkeyInputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SaveManager.Views.Settings"
             x:Name="UserControl"
             mc:Ignorable="d"
             Width="120"
             Height="24">
    <TextBox x:Name="HotkeyTextbox"
             d:Text="(Hotkey Shortcut)"
             Text="{Binding Display, ElementName=UserControl, Mode=OneWay}"
             PreviewKeyDown="HotkeyTextbox_PreviewKeyDown"
             GotFocus="HotkeyTextbox_GotFocus"
             LostFocus="HotkeyTextbox_LostFocus"
             Width="Auto"
             Height="Auto"
             HorizontalContentAlignment="Center"
             VerticalContentAlignment="Center"
             IsReadOnly="True"
             IsReadOnlyCaretVisible="False"
             IsUndoEnabled="False"
             IsTabStop="False"
             ContextMenu="{x:Null}"/>
</UserControl>
