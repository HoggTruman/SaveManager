<UserControl x:Class="SaveManager.Views.Save.ActionsSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SaveManager.Views.Save"
             mc:Ignorable="d"
             MinWidth="550" MinHeight="50"
             Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>

        <Button Width="Auto"
                Height="30"
                Grid.Column="0"
                Margin="10">
            Backup Save
        </Button>

        <Button Width="Auto"
                Height="30"
                Grid.Column="1"
                Margin="10">
            Load Save
        </Button>

        <Button Width="Auto"
                Height="30"
                Grid.Column="2"
                Margin="10">
            Replace Save
        </Button>

        <Button Width="30"
                Height="30"
                Grid.Column="3"
                Margin="10">
            Settings
        </Button>

    </Grid>
</UserControl>
