<Window x:Class="SaveManager.Views.Save.SaveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaveManager.Views.Save"
        mc:Ignorable="d"
        Title="Save Manager" Height="450" Width="570"
        MinHeight ="450" MinWidth="570"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        
        <local:GameProfileControl Height="60" 
                                  Grid.Row="0"
                                  VerticalAlignment="Top"/>

        <local:SaveListControl Width="Auto"
                               Grid.Row="1"/>

        <local:ActionsSettingsControl Width="Auto"
                                      Grid.Row="2"/>
    </Grid>
</Window>
