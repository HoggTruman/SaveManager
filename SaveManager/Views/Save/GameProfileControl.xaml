<UserControl x:Class="SaveManager.Views.Save.GameProfileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SaveManager.Views.Save"
             mc:Ignorable="d" 
             MinWidth="550" MinHeight="60"
             Background="white">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        
        <Label Target="{Binding ElementName=GameComboBox}" 
               HorizontalAlignment="Left"
               Grid.Column="0"
               FontSize="14"
               Margin="10, 2, 0, 0"
               Padding="0">
            Game:
        </Label>
        <ComboBox Name="GameComboBox" 
                  HorizontalAlignment="center"
                  Grid.Row="1"
                  Grid.Column="0"
                  Width="150"
                  Height="25"
                  Margin="10,0,10,0"/>

        <Label Target="{Binding ElementName=ProfileComboBox}" 
               HorizontalAlignment="Left"
               Grid.Column="1"
               FontSize="14"
               Margin="10, 2, 0, 0"
               Padding="0">
            Profile:
        </Label>
        <ComboBox Name="ProfileComboBox" 
                  HorizontalAlignment="Stretch"
                  Grid.Row="1"
                  Grid.Column="1"
                  Height="25"
                  Margin="10,0,10,0"/>

        <Button HorizontalAlignment="Center"
                Grid.Row="1"
                Grid.Column="2"
                Width="80"
                Height="25"                
                Margin="10,0,10,0">
            Edit Profiles
        </Button>

    </Grid>
</UserControl>
