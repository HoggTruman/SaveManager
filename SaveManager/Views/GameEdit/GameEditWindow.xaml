<Window x:Class="SaveManager.Views.GameEdit.GameEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaveManager.Views.GameEdit"
        xmlns:viewmodels="clr-namespace:SaveManager.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:GameEditViewModel}"
        mc:Ignorable="d"
        Title="Configure Games"
        MinWidth="650"
        Background="GhostWhite"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Closing="Window_Closing">
    <Grid Width="Auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="124" />
        </Grid.ColumnDefinitions>



        <Label Target="{Binding ElementName=GameComboBox}"
               Content="Game:"
               HorizontalAlignment="Left"
               FontSize="14"
               Margin="10,2,0,0"
               Padding="0" />

        <ComboBox x:Name="GameComboBox"
                  ItemsSource="{Binding Games}"
                  SelectedItem="{Binding ActiveGame}"
                  DisplayMemberPath="Name"
                  Width="Auto"
                  Height="24"
                  Grid.Row="1"
                  Margin="10" />

        <StackPanel Width="Auto"
                    Margin="10,0"
                    Orientation="Horizontal"
                    Grid.Row="1"
                    Grid.Column="1">
            <Button x:Name="AddGameButton"
                    Click="AddGameButton_Click"
                    Width="24"
                    Height="24"
                    Margin="8,0,8,0"
                    ToolTip="Add Game">
                <Image Source="/Assets/PlusIcon.png" />
            </Button>

            <Button x:Name="RenameGameButton"
                    Click="RenameGameButton_Click"
                    Width="24"
                    Height="24"
                    ToolTip="Rename Game">
                <Image Source="/Assets/RenameIcon.png" />
            </Button>

            <Button x:Name="RemoveGameButton"
                    Click="RemoveGameButton_Click"
                    Width="24"
                    Height="24"
                    Margin="8,0,8,0"
                    ToolTip="Remove Game">
                <Image Source="/Assets/DeleteIcon.png" />
            </Button>
        </StackPanel>


        <Separator Grid.Row="2"
                   Grid.ColumnSpan="2"
                   Margin="0 1 0 1" />


        <Label Content="Location of Savefile:"
               HorizontalAlignment="Left"
               FontSize="14"
               Margin="10,2,0,0"
               Padding="0"
               Grid.Row="3" />


        <Label Content="{Binding Path=ActiveGame.SavefileLocation}"
               Width="Auto"
               Height="24"
               Grid.Row="4"
               Margin="10"
               Padding="5,0"
               VerticalContentAlignment="Center"
               BorderThickness="1"
               BorderBrush="DarkGray"
               Background="White" />


        <DockPanel Width="Auto"
                   Height="Auto"
                   Grid.Row="4"
                   Grid.Column="1"
                   Margin="10,0"
                   LastChildFill="True">
            <Button x:Name="SavefileResetButton"
                    Click="SavefileResetButton_Click"
                    DockPanel.Dock="Right"
                    Width="24"
                    Height="24"
                    ToolTip="Reset savefile location">
                <Image Source="/Assets/CrossIcon.png" />
            </Button>

            <Button x:Name="SavefileBrowseButton"
                    Click="SavefileBrowseButton_Click"
                    Content="Browse"
                    Width="Auto"
                    Height="24"
                    Margin="0,0,10,0"/>            
        </DockPanel>

        <Label Content="Profiles Directory:"
               HorizontalAlignment="Left"
               Grid.Row="5"
               FontSize="14"
               Margin="10,2,0,0"
               Padding="0" />

        <Label Content="{Binding Path=ActiveGame.ProfilesDirectory}"
               Width="Auto"
               Height="24"
               Grid.Row="6"
               Margin="10"
               Padding="5,0"
               VerticalContentAlignment="Center"
               BorderThickness="1"
               BorderBrush="DarkGray"
               Background="White" />


        <DockPanel Width="Auto"
                   Height="Auto"
                   Grid.Row="6"
                   Grid.Column="1"
                   Margin="10,0"
                   LastChildFill="True">
            <Button x:Name="ProfilesDirectoryResetButton"
                    Click="ProfilesDirectoryResetButton_Click"
                    DockPanel.Dock="Right"
                    Width="24"
                    Height="24"
                    ToolTip="Reset profiles directory">
                <Image Source="/Assets/CrossIcon.png" />
            </Button>

            <Button x:Name="ProfilesDirectoryBrowseButton"
                    Click="ProfilesDirectoryBrowseButton_Click"
                    Content="Browse"
                    Width="Auto"
                    Height="24"
                    Margin="0,0,10,0" />
        </DockPanel>
        
    </Grid>
</Window>
